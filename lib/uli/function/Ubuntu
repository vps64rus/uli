echo "Устанавливаем Ubuntu."

# Зеркало в сети
MIRROR="http://archive.ubuntu.com/ubuntu"

# Выбор релиза
VEROS=$(whiptail --title "Release" --radiolist \
"Выберите релиз ОС Debian." 15 60 5 \
"trusty" "14.04 LTS" OFF \
"xenial" "16.04 LTS" OFF \
"bionic" "18.04 LTS" ON 3>&1 1>&2 2>&3)
exitstatus=$?
if [ $exitstatus = 0 ]; then
echo "Выбран релиз:" $VEROS
else
echo "Вы отменили установку."
exit 1
fi

# Базовый sources.list
APT_LIST="deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS" main restricted
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS" main restricted
deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-updates main restricted
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-updates main restricted
deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS" universe
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS" universe
deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-updates universe
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-updates universe
deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS" multiverse
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS" multiverse
deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-updates multiverse
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-updates multiverse
deb http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-backports main restricted universe multiverse
deb-src http://us.archive.ubuntu.com/ubuntu/ "$VEROS"-backports main restricted universe multiverse
deb http://archive.canonical.com/ubuntu "$VEROS" partner
deb-src http://archive.canonical.com/ubuntu "$VEROS" partner
deb http://security.ubuntu.com/ubuntu "$VEROS"-security main restricted
deb-src http://security.ubuntu.com/ubuntu "$VEROS"-security main restricted
deb http://security.ubuntu.com/ubuntu "$VEROS"-security universe
deb-src http://security.ubuntu.com/ubuntu "$VEROS"-security universe
deb http://security.ubuntu.com/ubuntu "$VEROS"-security multiverse
deb-src http://security.ubuntu.com/ubuntu "$VEROS"-security multiverse"

