echo "Устанавливаем Debian."

# Зеркало в сети
MIRROR="http://ftp.ru.debian.org/debian"

# Выбор релиза
VEROS=$(whiptail --title "Release" --radiolist \
"Выберите релиз ОС Debian." 15 60 5 \
"wheezy" "Wheezy" OFF \
"jessie" "Jessie" OFF \
"stretch" "Stretch" OFF \
"buster" "Buster" ON \
"sid" "Sid" OFF 3>&1 1>&2 2>&3)
exitstatus=$?
if [ $exitstatus = 0 ]; then
echo "Выбран релиз:" $VEROS
else
echo "Вы отменили установку."
exit 1
fi

# Базовый sources.list
APT_LIST="deb http://deb.debian.org/debian/ "$VEROS" main contrib non-free\n\
deb-src http://deb.debian.org/debian/ "$VEROS" main contrib non-free\n\
deb http://deb.debian.org/debian/ "$VEROS"-updates main contrib non-free\n\
deb-src http://deb.debian.org/debian/ "$VEROS"-updates main contrib non-free\n\
deb http://security.debian.org/debian-security/ "$VEROS"/updates main contrib non-free\n\
deb-src http://security.debian.org/debian-security/ "$VEROS"/updates main contrib non-free"
